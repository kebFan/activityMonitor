<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:background="@color/colorGreen"
        android:textSize="90dp"
        android:layout_gravity="center"
        android:text="ACTIVE"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:background="@color/colorGreen"
        android:text="Living Room TV   Active         BootingUp            2:00pm"/>
    <TextView
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_margin="5dp"
        android:background="@color/colorGreen"
        android:padding="10dp"
        android:text="Kitchen TV     Active               ON                         8:00am"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:text="Bedroom TV    InActive         OFF                        3 days"/>
    <TextView
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_margin="5dp"
        android:background="@color/colorYellow"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:text="Basement TV    InActive        DREAM                 48 hrs"/>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/private_message_list_of_users"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/chat_toolbar"
            android:layout_above="@+id/chat_linear_layout"
            />

</LinearLayout>